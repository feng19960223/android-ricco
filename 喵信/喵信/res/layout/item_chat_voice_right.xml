<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_item_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/usual_padding"
        android:text="15:30"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <com.fgr.miaoxin.view.XCRoundImageView
            android:id="@+id/iv_item_chat_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/iv_item_chat_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_item_chat_avatar"
            android:layout_toLeftOf="@+id/iv_item_chat_avatar"
            android:background="@drawable/chatto_bg_normal"
            android:src="@drawable/voice_left3" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/iv_item_chat_image"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_item_chat_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3&apos;"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/pb_item_chat_sending"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:visibility="visible" />
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>