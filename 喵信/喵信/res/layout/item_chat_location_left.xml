<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_item_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/usual_padding"
        android:text="15:30"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="10dp" >

        <com.fgr.miaoxin.view.XCRoundImageView
            android:id="@+id/iv_item_chat_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_launcher" />

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_alignTop="@+id/iv_item_chat_avatar"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/iv_item_chat_avatar"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_item_chat_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chatfrom_bg_normal"
                android:src="@drawable/login_icon" />

            <TextView
                android:id="@+id/tv_item_chat_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:text="中国北京XXXXXXXXXXXXX"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>