<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fgr.miaoxin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/headerview"
        layout="@layout/headerview_layout" />

    <EditText
        android:id="@+id/et_postblog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/input_bg"
        android:gravity="left|top"
        android:hint="这一刻的想法..."
        android:lines="6"
        android:maxLines="6"
        android:padding="8dp"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_postblog_imagecontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp" >

            <ImageView
                android:id="@+id/iv_postblog_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_bg"
                android:padding="4dp"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_postblog_del1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp" >

            <ImageView
                android:id="@+id/iv_postblog_img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_bg"
                android:padding="4dp"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_postblog_del2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp" >

            <ImageView
                android:id="@+id/iv_postblog_img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_bg"
                android:padding="4dp"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_postblog_del3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp" >

            <ImageView
                android:id="@+id/iv_postblog_img4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_bg"
                android:padding="4dp"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_postblog_del4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_postblog_imagenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    "
            android:textSize="20sp" />

        <com.fgr.miaoxin.view.NumberProgressBar
            android:id="@+id/npb_postblog_progress"
            style="@style/NumberProgressBar_Default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:visibility="invisible"
            app:progress_reached_bar_height="15dp"
            app:progress_text_size="18sp"
            app:progress_unreached_bar_height="7.5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <ImageView
            android:id="@+id/iv_postblog_plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/input_bg"
            android:padding="5dp"
            android:src="@drawable/ic_plus" />

        <ImageView
            android:id="@+id/iv_postblog_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/btn_chat_add_picture_selector"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_postblog_camera"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/btn_chat_add_camera_selector"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_postblog_location"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/btn_chat_add_location_selector"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>