<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf7f6" >

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/splash" />

    <TextView
        android:id="@+id/tv_splash_miao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_splash_logo"
        android:layout_below="@+id/iv_splash_logo"
        android:text="喵" 
        android:textSize="50sp"
        android:visibility="invisible"/>
    
     <TextView
        android:id="@+id/tv_splash_xin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_splash_logo"
        android:layout_below="@+id/iv_splash_logo"
        android:text="信" 
        android:textSize="50sp"
        android:visibility="invisible"/>

</RelativeLayout>