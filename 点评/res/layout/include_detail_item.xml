<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp" >

    <com.tarena.view.XCRoundImageView
        android:id="@+id/xCRoundImageView1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/my_default" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@+id/xCRoundImageView1"
        android:text="姓名"
        android:textColor="#486B8C" />

    <ImageView
        android:id="@+id/imageView_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_rating"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@+id/textView_rating"
        android:src="@drawable/star35" />

    <TextView
        android:id="@+id/textView_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_rating"
        android:layout_below="@+id/imageView_rating"
        android:layout_marginTop="8dp"
        android:text="评论正文评论正文评论正文评论正文评论正文评论正文评论正文评论正文评论正文评论正文评论正文评论正文评论正文评论正文评论正文"
        android:textColor="#161616" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/textView_content"
        android:layout_below="@+id/textView_content"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/bucket_no_picture" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/bucket_no_picture" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/bucket_no_picture" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/xCRoundImageView1"
        android:layout_alignLeft="@+id/textView_name"
        android:text="打分"
        android:textColor="#777777" />

    <TextView
        android:id="@+id/textView_avgPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_rating"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@+id/imageView_rating"
        android:text="￥70/人"
        android:textColor="#A0A0A0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/xCRoundImageView1"
        android:layout_below="@+id/linearLayout1"
        android:background="#EBEBEB" />

</RelativeLayout>