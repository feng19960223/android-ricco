<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/imageView_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_back_u" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_title1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/zeus_tab_left_press"
            android:gravity="center"
            android:text="商户"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView_title2"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/zeus_tab_right_normal"
            android:gravity="center"
            android:text="闪惠团购"
            android:textColor="#FF6633" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:contentDescription="@null"
        android:src="@drawable/navibar_icon_search" />

</RelativeLayout>