<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#FF6633"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textView_place"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/selector_title_arrow"
        android:gravity="center_vertical"
        android:text="北京"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@drawable/shape_textview_search"
        android:drawableLeft="@drawable/navibar_icon_search"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="输入商户名、地名"
        android:textColor="#666666" />

    <ImageView
        android:id="@+id/imageView_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:src="@drawable/home_navibar_icon_add" />

</LinearLayout>